{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        // Desativa o warning de JsDocs para evitar que o código antigo fique
        // poluído com warnings
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        // Essa regra é para versões antigas do React, então foi desativada
        // para evitar erros que não são erros no Eslint
        "react/react-in-jsx-scope": "off",
        // Desativa warning quando usamos "" em textos
        "react/no-unescaped-entities": "off",
        // Desativa verificação de tipagem de props, pois não estamos usando TS
        "react/prop-types": "off",
        // Altera o nível dessas regras para indicar que elas não são erros,
        // mas que devem ser corrigidas
        "camelcase": "warn",
        "max-len": "off"
    }
}
